@using PublicSite.Models.ViewModels
@model LogInViewModel

@{Layout = null;}

<div id="reg-form">

    @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
    {
        <h2 class="center modal-header">Prijava</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p id="errorMessage"></p>
        <div class="modal-body">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, htmlAttributes: new { placeholder = "Korisničko ime", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Lozinka", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
            </div>
        </div>
        <div class="modal-footer">
            <input ID="btnLogin" type="submit" class="btn blue" value="Prijava" />
        </div>
    }
    @Scripts.Render("~/bundles/jqueryval")
</div>